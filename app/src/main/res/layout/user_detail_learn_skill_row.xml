<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/systemDarkBlue"
    android:layout_marginHorizontal="8dp">
    <ImageView
        android:id="@+id/user_learn_skill_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_wine"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_settings"
        android:backgroundTint="@color/systemLightRed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@id/user_learn_skill_name"
        android:padding="4dp"/>
    <TextView
        android:id="@+id/user_learn_skill_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skill Name"
        android:textSize="16sp"
        android:fontFamily="@font/muli_regular"
        android:textColor="@android:color/white"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toTopOf="@id/user_learn_skill_img"
        app:layout_constraintStart_toEndOf="@id/user_learn_skill_img"
        app:layout_constraintRight_toLeftOf="@id/user_learn_skill_category"/>
    <TextView
        android:id="@+id/user_learn_skill_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skill Category"
        android:textSize="16sp"
        android:fontFamily="@font/muli_bold"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/user_learn_skill_name"
        app:layout_constraintStart_toStartOf="@id/user_learn_skill_name"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>