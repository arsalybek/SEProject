<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/systemDarkBlue">

    <LinearLayout
        android:id="@+id/search_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_buttom_nav"
            android:drawableStart="@drawable/ic_search_skill"
            android:drawableEnd="@drawable/ic_close"
            android:hint="  Try smthg"
            android:textColorHint="@android:color/darker_gray" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_skill_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_part"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"/>

</RelativeLayout>